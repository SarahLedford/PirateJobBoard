@section ScrollAnimation{
    <script>
        ScrollReveal().reveal('.highlights');
        ScrollReveal().reveal('.indexTitles');
        ScrollReveal().reveal('.testimonial1', { delay: 100});
        ScrollReveal().reveal('.testimonial2', { delay: 300});
        ScrollReveal().reveal('.testimonial3', { delay: 400});
        ScrollReveal().reveal('.category1', { delay: 100 });
        ScrollReveal().reveal('.category2', { delay: 300 });
        ScrollReveal().reveal('.category3', { delay: 400 });
        ScrollReveal().reveal('.category4', { delay: 500 });
