<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>@ViewBag.Title | Jobs Ahoy</title>

    <!-- ===============================================-->
    <!--    Favicons-->
    <!-- ===============================================-->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

    <!-- ===============================================-->
    <!--    Stylesheets-->
    <!-- ===============================================-->
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    <link href="https://cdn.datatables.net/responsive/2.2.1/css/responsive.dataTables.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
</head>

<body style="background-image:url(../../Content/assets/img/PirateStockImges/woodGrain.jpg); background-repeat:round;">
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    @* fixed-top  *@
    <main class="main" id="top">
        <nav class="navbar navbar-expand-lg navbar-light py-3 backdrop" data-navbar-on-scroll="data-navbar-on-scroll">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center fw-bolder fs-2 fst-italic" href="@Url.Action("Index", "Home")">
                    <img class="logoWheel" src="~/Content/assets/img/LogoWheelCentered.png" alt="Logo Wheel" longdesc="Spinning wheel piece of Jobs Ahoy logo" />
                    <img class="logoText" src="~/Content/assets/img/LogoText.png" alt="Logo Text" longdesc="Text piece of Jobs Ahoy logo" />
                </a>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto pt-2 pt-lg-0">
                        @if (Request.IsAuthenticated)
                        {
                            <li class="nav-item px-2"><a class="nav-link fw-bolder" href="@Url.Action("Index", "OpenAssignments")">Open Posts</a></li>
                            <li class="nav-item px-2"><a class="nav-link fw-bolder" href="@Url.Action("Index", "Applications")">Applications</a></li>
                        }

                        @if (Request.IsAuthenticated && User.IsInRole("Crewmate"))
                        {
                            <li class="nav-item px-2"><a class="nav-link fw-bolder" href="@Url.Action("Index", "PirateDetails")">Yer Profile</a></li>
                        }

                        <li class="nav-item px-2 mb-3"><a class="nav-link fw-bolder" href="@Url.Action("Contact", "Home")">Contact</a></li>
                    </ul>
                    @if (Request.IsAuthenticated && User.IsInRole("PirateLord"))
                    {

                        <ul class="nav-link navbar-nav lordlyDuties">
                            <li class="nav-item dropdown nav-item px-2">
                                <a class="nav-item nav-link dropdown-toggle fw-bolder" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Lordly Duties
                                </a>
                                <ul class="nav-item dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item nav-link fw-bolder" href="@Url.Action("Index", "Ships")">Ships</a></li>
                                    <li><a class="dropdown-item nav-link fw-bolder" href="@Url.Action("Index", "Assignments")">Assignments</a></li>
                                    <li><a class="dropdown-item nav-link fw-bolder" href="@Url.Action("Index", "ApplicationStatus")">Application Statuses</a></li>
                                    <li>@Html.ActionLink("Roles", "Index", "RolesAdmin", null, new { @class = "dropdown-item nav-link fw-bolder" })</li>
                                    <li>@Html.ActionLink("Users", "Index", "UsersAdmin", null, new { @class = "dropdown-item nav-link fw-bolder" })</li>
                                </ul>
                            </li>
                        </ul>
                    }
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
        <div id="MessageDisplay" class="row">
            <div class="col-md-10 col-md-offset-1" id="MessageContent">

            </div>
        </div>
        @RenderSection("homeIndex", false)
        @{ var styling = RenderSection("homeIndex", false) == null ? null : "display:none"; }
        <div id="wrapper-div" style="@styling">
            @RenderBody()
        </div>


    </main>
    <footer>
        <!--======================================================================-->
        <!--FOOTER================================================================-->
        <!--======================================================================-->

