@model IEnumerable<PirateJobBoard.DATA.EF.Assignment>

@{
    ViewBag.Title = "Assignments";
}

<h2>@ViewBag.Title</h2>

<h3>
    <a href="@Url.Action("Create", "Assignments")"><i class="fa fa-plus mx-2"></i></a>
</h3>
<table class="table table-hover text-center" id="assignments">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentDescription)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentDescription)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Assignments", new { id = item.AssignmentID })"><i class="fa fa-edit mx-2"></i></a>
                <a href="@Url.Action("Details", "Assignments", new { id = item.AssignmentID })"><i class="fa fa-info mx-2"></i></a>
                <a href="@Url.Action("Delete", "Assignments", new { id = item.AssignmentID })"><i class="fa fa-trash mx-2"></i></a>
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#assignments').DataTable();
        });
    </script>
}