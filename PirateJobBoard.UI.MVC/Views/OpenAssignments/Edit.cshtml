@model PirateJobBoard.DATA.EF.OpenAssignment

@{
    ViewBag.Title = "Edit";
}

<h2 class="my-4 text-center">@ViewBag.Title <em>@Model.Assignment.AssignmentName</em></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OpenAssignmentID)

        <div class="form-group">
            @Html.LabelFor(model => model.AssignmentID, "AssignmentID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AssignmentID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AssignmentID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShipID, "ShipID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ShipID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShipID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary my-4" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "OpenAssignments")" class="text-decoration-none"><i class="fa fa-arrow-left mx-2"></i> Go Back</a>
</div>
